<table>
<tr>
  <th class="game">Game</th>
  <th class="bettype">Bet type</th>
  <th class="num">Your number</th>
  <th class="dollars">Bet amount</th>
  <th class="dollars">Win amount</th>
  <th class="dollars">Collect amount</th>
  <th class="date">Resolved date</th>
  <th class="dollars">Paid amount</th>
</tr>
{{#each bets}}
<tr>
  <td class="game">{{this.gameid}}</td>
  <td class="bettype">{{this.bettype}}</td>
  <td class="num">{{this.num}}</td>
  <td class="dollars">{{this.amount}}</td>
  <td class="dollars">{{this.pays}}</td>
  <td class="dollars">{{this.collects}}</td>
  <td class="date">{{this.resolved}}</td>
  <td class="dollars">{{this.paid}}</td>
</tr>
{{/each}}
</table>
