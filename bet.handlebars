<ul class="all-bets">
    {{! for every line, make a table with its data containing a form w/ bet amount and winnnings}}
    {{#each lines}}
    <li>
        {{! is this possible?}}
        <form id={{this.awayLong}} + "-" + {{this.homeLong}} + "-" + {{this.gameDate}}>
            <table>
                {{! title row, contains name date and submit button}}
                <tr>
                    <th>{{this.awayLong}} at {{this.homeLong}}</th>
                    <th>{{this.gameDate}}</th>
                    <th><button type="submit">Submit bet</button></th>
                </tr>

                {{! away title row}}
                <tr>
                    <th>Away</th>
                    <th>{{this.awayLong}}</th>
                    <th>Bet</th>
                    <th>Win</th>
                    <th>Collect</th>
                </tr>

                {{! away points row}}
                <tr>
                    <th>Pts.</th>
                    <th>{{this.awayPts}}</th>
                    <th>
                        <input class="away-point-bet" type="number">
                    </th>
                    <th>
                        <input class="away-point-win" type="number">
                    </th>
                    <th class="away-point-collect">Collect</th>
                </tr>

                {{! away ML row}}
                <tr>
                    <th>ML</th>
                    <th>{{this.awayML}}</th>
                    <th>
                        <input class="away-ml-bet" type="number">
                    </th>
                    <th>
                        <input class="away-ml-win" type="number">
                    </th>
                    <th class="away-ml-collect">TODO: figure out how to implement collect</th>
                </tr>

                {{! home title row}}
                <tr>
                    <th>Home</th>
                    <th>{{this.homeLong}}</th>
                    <th>Bet</th>
                    <th>Win</th>
                    <th>Collect</th>
                </tr>

                {{! home points row}}
                <tr>
                    <th>Pts.</th>
                    <th>{{this.homePts}}</th>
                    <th>
                        <input class="home-point-bet" type="number">
                    </th>
                    <th>
                        <input class="home-point-win" type="number">
                    </th>
                    <th class="home-point-collect">TODO: figure out how to implement collect</th>
                </tr>

                {{! home ML row}}
                <tr>
                    <th>ML</th>
                    <th>{{this.homeML}}</th>
                    <th>
                        <input class="home-ml-bet" type="number">
                    </th>
                    <th>
                        <input class="home-ml-win" type="number">
                    </th>
                    <th class="home-ml-collect">TODO: figure out how to implement collect</th>
                </tr>

                {{! over row}}
                <tr>
                    <th>Over</th>
                    <th>{{this.awayOE}}</th>
                    <th>
                        <input class="over-bet" type="number">
                    </th>
                    <th>
                        <input class="over-win" type="number">
                    </th>
                    <th class="over-collect">TODO: figure out how to implement collect</th>
                </tr>

                {{! under row}}
                <tr>
                    <th>Under</th>
                    <th>{{this.awayOE}}</th>
                    <th>
                        <input class="under-bet" type="number">
                    </th>
                    <th>
                        <input class="under-win" type="number">
                    </th>
                    <th class="under-collect">TODO: figure out how to implement collect</th>
                </tr>
            </table>
        </form>
    </li>
    {{/each}}
    <script src="../public/bet.js"></script>
</ul>